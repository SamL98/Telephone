    <title>Welcome</title>

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="page-header">
				<h1 id="header">Welcome</h1>
			</div>

			<div id="form">
				<%= form_tag("/home", method: "get", validates: true, target: "_blank", style: "margin-top: 30px;") do %>

					<div class="form-group">
						<%= text_field_tag(:name, "", placeholder: "Enter subject identifier", autocomplete: "off", id: "nameIn", class: "form-control") %>
					</div>

					<div class="form-group">
						<%= text_field_tag(:place, "", placeholder: "Enter place in chain", autocomplete: "off", id: "placeIn", class: "form-control") %>
					</div>

					<div class="form-group">
						<%= text_field_tag(:chain, "", placeholder: "Enter the chain identifier", autocomplete: "off", id: "chainIn", class: "form-control") %>
					</div>

					<div class="form-group" id="submit">
						<%= submit_tag("Login", class: "btn btn-primary", id: "submitButton") %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</body>

<style>
#header {
    color: #339966;
}
#submit {
	float: right;
}
#submitButton {
	background-color: #339966;
	color: #FFF;
}
</style>
